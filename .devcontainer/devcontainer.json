{
    "name": "Kintetsu Auto",
    "dockerComposeFile": "docker-compose.yml",
    "service": "app",
    "workspaceFolder": "/workspace",

    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {},
        "ghcr.io/devcontainers/features/desktop-lite:1": {
            "webPort": 6080,
            "password": "vscode" 
        }
    },

    "postCreateCommand": "pip install -r requirements.txt && playwright install --with-deps",

    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance"
            ]
        }
    },
    "remoteUser": "vscode"
}